<% div_for(meeting) do %>

  <div>
    <b>Title:</b><span style="text-decoration: underline;"=""> <%=h meeting.title %></span>
  </div>

  <div>
    <b>Created: </b> <%= meeting.created_at.strftime("%m/%d/%Y %I:%M%p") %>
  </div>

  <div>
    <b>Look forward: </b> <%=h meeting.num_days_forward_to_consider %> <b>days</b>
  </div>

  <div>
    <b>Earliest:</b> <%=h (meeting.created_at + meeting.num_days_before_scheduling).strftime("%m/%d/%y") %>
  </div>

  <div>
    <b>Next possible:</b> <%= meeting.tentative_days.split.first %>
  </div>

  <div>
    <b>Last possible:</b> <%=h meeting.tentative_days.split.last %>
  </div>

  <div id="participants">
    <b>All possible:</b> <%=h meeting.tentative_days %>
  </div>

  <div>    
    <b>Respondents:</b> <br />
    <b>Expected:</b>     <%=h meeting.number_of_people_who_need_to_respond_before_suggesting_a_date %><br />
    <b>Current:</b> <%=h meeting.participants.count %>
  </div>

<% end %>

<div>
  <h1>Participants</h1>

    <%= render :partial => 'participants/participant_small', :collection => meeting.participants %>

</div>
 


<div>
  <h1>Create Participant</h1>
  <%= render :partial => 'participants/form', :object => meeting.participants.new %>
</div>
